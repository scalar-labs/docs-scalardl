source "https://rubygems.org"

gem "jekyll", "~> 3.9.3"
gem "minimal-mistakes-jekyll", "~> 4.24.0"
gem "github-pages", group: :jekyll_plugins # Enable when publishing the docs site. Disable for local usage, otherwise the API limit will be exceeded.
gem "jekyll-include-cache", group: :jekyll_plugins

gem "tzinfo-data"
gem "wdm", "~> 0.1.0" if Gem.win_platform?

# Additional plugins
group :jekyll_plugins do
  gem "jemoji"
  gem "json"
  gem "kramdown", "~> 2.3.2"
  gem 'kramdown-parser-gfm', '~> 1.1'
  gem "mdl", "~> 0.12.0" # Markdown linting
  gem "nokogiri"
  gem "premonition", "4.0.1" # Admonitions
  gem "webrick", "~> 1.8"
  gem "faraday-retry"
  gem "jekyll-paginate"
  gem "jekyll-sitemap", "~> 1.4.0"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jekyll-optional-front-matter", "~> 0.3.2"
  gem "jekyll-redirect-from", "~> 0.16.0"
  gem "jekyll-titles-from-headings", "~> 0.5.3"
end